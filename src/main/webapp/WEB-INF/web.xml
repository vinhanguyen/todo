<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd ">
	<servlet>
		<servlet-name>TasksServlet</servlet-name>
		<servlet-class>todo.servlet.TasksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TasksServlet</servlet-name>
		<url-pattern>/tasks</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteTaskServlet</servlet-name>
		<servlet-class>todo.servlet.DeleteTaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteTaskServlet</servlet-name>
		<url-pattern>/tasks/delete</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>tasks</web-resource-name>
			<url-pattern>/tasks/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	<security-role>
		<role-name>user</role-name>
	</security-role>
</web-app>
